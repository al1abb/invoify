<html>
    <head>
        <!-- Include Tailwind CSS via a link or import it based on your project setup -->
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.15/dist/tailwind.min.css">
    </head>
    <body class="">
        <!-- Invoice -->
        <div class="max-w-[85rem] px-4 sm:px-6 lg:px-8 mx-auto my-1">
            <div class="sm:w-11/12 lg:w-3/4 mx-auto">
                <!-- Card -->
                <div
                    class="flex flex-col p-4 sm:p-10 bg-white rounded-xl dark:bg-gray-800"
                >
                    <!-- Grid -->
                    <div class="flex justify-between">
                        <div>
                            <img src={{ details.invoiceLogo }} style="height: 100px;" alt="">

                            <h1
                                class="mt-2 text-lg md:text-xl font-semibold text-blue-600 dark:text-white"
                            >
                            {{ sender.name }}
                            </h1>
                        </div>
                        <!-- Col -->

                        <div class="text-right">
                            <h2
                                class="text-2xl md:text-3xl font-semibold text-gray-800 dark:text-gray-200"
                            >Invoice #</h2>
                            <span
                                class="mt-1 block text-gray-500"
                            >{{ details.invoiceNumber }}</span>

                            <address
                                class="mt-4 not-italic text-gray-800 dark:text-gray-200"
                            >
                                {{ sender.address }}<br />
                                {{ sender.zipCode }}, {{ sender.city }}<br />
                                {{ sender.country }}<br />
                            </address>
                        </div>
                        <!-- Col -->
                    </div>
                    <!-- End Grid -->

                    <!-- Grid -->
                    <div class="mt-6 grid sm:grid-cols-2 gap-3">
                        <div>
                            <h3
                                class="text-lg font-semibold text-gray-800 dark:text-gray-200"
                            >Bill to:</h3>
                            <h3
                                class="text-lg font-semibold text-gray-800 dark:text-gray-200"
                            >{{ receiver.name }}</h3>
                            <address class="mt-2 not-italic text-gray-500">
                                {{ receiver.address }},<br />
                                {{ receiver.zipCode }}, {{ receiver.city }},<br />
                                {{ receiver.country }}<br />
                            </address>
                        </div>
                        <!-- Col -->

                        <div class="sm:text-right space-y-2">
                            <!-- Grid -->
                            <div
                                class="grid grid-cols-2 sm:grid-cols-1 gap-3 sm:gap-2"
                            >
                                <dl class="grid sm:grid-cols-6 gap-x-3">
                                    <dt
                                        class="col-span-3 font-semibold text-gray-800 dark:text-gray-200"
                                    >Invoice date:</dt>
                                    <dd
                                        class="col-span-3 text-gray-500"
                                    >{{ details.invoiceDate }}</dd>
                                </dl>
                                <dl class="grid sm:grid-cols-6 gap-x-3">
                                    <dt
                                        class="col-span-3 font-semibold text-gray-800 dark:text-gray-200"
                                    >Due date:</dt>
                                    <dd
                                        class="col-span-3 text-gray-500"
                                    >{{ details.dueDate }}</dd>
                                </dl>
                            </div>
                            <!-- End Grid -->
                        </div>
                        <!-- Col -->
                    </div>
                    <!-- End Grid -->

                    <!-- Table -->
                    <div class="mt-6">
                        <div
                            class="border border-gray-200 p-4 rounded-lg space-y-4 dark:border-gray-700"
                        >
                            <div class="hidden sm:grid sm:grid-cols-5">
                                <div
                                    class="sm:col-span-2 text-xs font-medium text-gray-500 uppercase"
                                >Item</div>
                                <div
                                    class="text-left text-xs font-medium text-gray-500 uppercase"
                                >Qty</div>
                                <div
                                    class="text-left text-xs font-medium text-gray-500 uppercase"
                                >Rate</div>
                                <div
                                    class="text-right text-xs font-medium text-gray-500 uppercase"
                                >Amount</div>
                            </div>

                            <div
                                class="hidden sm:block border-b border-gray-200 dark:border-gray-700"
                            ></div>

                            <div class="grid grid-cols-3 sm:grid-cols-5 gap-2">

                                {{#each details.items}}
                                    
                                    <div class="col-span-full sm:col-span-2">
                                        <p
                                            class="font-medium text-gray-800 dark:text-gray-200"
                                        >{{name}}</p>
                                    </div>
                                    {{!-- <div>
                                        <p class="font-small text-gray-800">
                                            {{description}}
                                        </p>
                                    </div> --}}
                                    <div>
                                        <p
                                            class="text-gray-800 dark:text-gray-200"
                                        >{{quantity}}</p>
                                    </div>
                                    <div>
                                        <p
                                            class="text-gray-800 dark:text-gray-200"
                                        >{{unitPrice}} {{../details.currency}}</p>
                                    </div>
                                    <div>
                                        <p
                                            class="sm:text-right text-gray-800 dark:text-gray-200"
                                        >{{total}} {{../details.currency}}</p>
                                    </div>
                                {{/each}}
                            </div>

                            <div
                                class="sm:hidden border-b border-gray-200 dark:border-gray-700"
                            ></div>
                        </div>
                    </div>
                    <!-- End Table -->

                    <!-- Flex -->
                    <div class="mt-8 flex sm:justify-end">
                        <div class="w-full max-w-2xl sm:text-right space-y-2">
                            <!-- Grid -->
                            <div
                                class="grid grid-cols-2 sm:grid-cols-1 gap-3 sm:gap-2"
                            >
                                <dl class="grid sm:grid-cols-5 gap-x-3">
                                    <dt
                                        class="col-span-3 font-semibold text-gray-800 dark:text-gray-200"
                                    >Subtotal:</dt>
                                    <dd
                                        class="col-span-2 text-gray-500"
                                    >{{ details.subTotal }}</dd>
                                </dl>

                                {{#if details.discountDetails.amount }}
                                    <dl class="grid sm:grid-cols-5 gap-x-3">
                                        <dt
                                            class="col-span-3 font-semibold text-gray-800 dark:text-gray-200"
                                        >Discount:</dt>
                                        <dd
                                            class="col-span-2 text-gray-500"
                                        >
                                            {{#ifEquals details.discountDetails.amountType "amount"}}
                                                - {{details.discountDetails.amount}} {{ details.currency }}
                                            {{else}}
                                                - {{details.discountDetails.amount}}%
                                            {{/ifEquals}}
                                        </dd>
                                    </dl>
                                {{/if}}

                                {{#if details.taxDetails.amount }}
                                    <dl class="grid sm:grid-cols-5 gap-x-3">
                                        <dt
                                            class="col-span-3 font-semibold text-gray-800 dark:text-gray-200"
                                        >Tax:</dt>
                                        <dd
                                            class="col-span-2 text-gray-500"
                                        >
                                            {{#ifEquals details.taxDetails.amountType "amount"}}
                                                + {{details.taxDetails.amount}} {{ details.currency }}
                                            {{else}}
                                                + {{details.taxDetails.amount}}%
                                            {{/ifEquals}}
                                        </dd>
                                    </dl>
                                {{/if}}

                                {{#if details.shippingDetails.cost }}
                                <dl class="grid sm:grid-cols-5 gap-x-3">
                                    <dt
                                        class="col-span-3 font-semibold text-gray-800 dark:text-gray-200"
                                    >Shipping:</dt>
                                    <dd
                                        class="col-span-2 text-gray-500"
                                    >
                                        {{#ifEquals details.shippingDetails.costType "amount"}}
                                            + {{details.shippingDetails.cost}} {{ details.currency }}
                                        {{else}}
                                            + {{details.shippingDetails.cost}}%
                                        {{/ifEquals}}
                                    </dd>
                                </dl>
                                {{/if}}

                                <dl class="grid sm:grid-cols-5 gap-x-3">
                                    <dt
                                        class="col-span-3 font-semibold text-gray-800 dark:text-gray-200"
                                    >Total:</dt>
                                    <dd
                                        class="col-span-2 text-gray-500"
                                    >{{ details.totalAmount }}</dd>
                                </dl>

                            </div>
                            <!-- End Grid -->
                        </div>
                    </div>
                    <!-- End Flex -->

                    <div class="">
                        <div class="my-4">
                            <div class="my-2">
                                <p class="font-semibold text-blue-600">Additional notes:</p>
                                <p
                                    class="font-semibold text-gray-800 dark:text-gray-200"
                                >
                                    {{ details.additionalNotes }}
                                </p>
                            </div>

                            <div class="my-2">
                                <p class="font-semibold text-blue-600">
                                    Payment terms:
                                </p>
                                <p class="font-semibold text-gray-800 dark:text-gray-200">
                                    {{ details.paymentTerms }}
                                </p>
                            </div>
                        </div>

                        <p class="text-gray-500">If you have any questions
                            concerning this invoice, use the following contact
                            information:</p>
                        <div class="mt-2">
                            <p
                                class="block text-sm font-medium text-gray-800 dark:text-gray-200"
                            >
                                {{ sender.email }}
                            </p>
                            <p
                                class="block text-sm font-medium text-gray-800 dark:text-gray-200"
                            >
                                {{ sender.phone }}
                            </p>
                        </div>
                    </div>

                    <div class="mt-6">
                        <p class="font-semibold text-gray-800">
                            Signature:
                        </p>
                        <img src={{ details.signature }} style="height: 100px" alt="">
                    </div>

                    {{!-- <p class="mt-5 text-sm text-gray-500">Â© 2022 Preline.</p> --}}
                </div>
                <!-- End Card -->
            </div>
        </div>
        <!-- End Invoice -->
    </body>
</html>